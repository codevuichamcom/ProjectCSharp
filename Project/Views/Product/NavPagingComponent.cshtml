@{

    int page = (int)ViewData["page"];
    List<int> listCount = ViewData["listCount"] as List<int>;
    string disable = "";
    string active = "";
}

@if (listCount.Count > 1)
{
    <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-end">
            @if (page == 1) { disable = "disabled"; } else { disable = ""; }
            <li class="page-item @disable">

                <a class="page-link" href="~/Product/listProduct?page=@(page-1)" tabindex="-1" aria-disabled="true">Previous</a>
            </li>
            @foreach (int i in listCount)
            {
                if (page == i) { active = "active"; } else { active= ""; }
                <li class="page-item @active"><a class="page-link" href="~/Product/listProduct?page=@i">@i</a></li>
            }
            @if (page == listCount.Count) { disable = "disabled"; } else { disable = ""; }
            <li class="page-item @disable">
                <a class="page-link" href="~/Product/listProduct?page=@(page+1)">Next</a>
            </li>
        </ul>
    </nav>
}